<!DOCTYPE html>
<html>
  <head>
    <% include frontend.ejs %>
    <title> Millesime Admin | <%= title %> </title>
  </head>
  <body>
    <% include navbar.ejs %>
    <div class="container" style="margin-top:75px; ">
    <h2><%= title %> </h2>
    <hr>
		<!-- use enctype="multipart/form-data" when uploading files to server, so that no characters will be encoded.-->
  <form method="post" action="/events/add"> <!--enctype="multipart/form-data"  -pentru upload -->
      <div class="container">
        <div class="col-md-12 ">
        <div class="row">
          <div class="col-md-12 ">
              <input class="form-control" type="text" name="title" id="title" placeholder="Titlu Eveniment" required="true"> 
              <p style="color:#8B0000;"><small>*Camp obligatoriu</small></p>
              <textarea  rows=7 class="form-control" type="text"  name="description"  id="description"  placeholder="Descriere Eveniment"></textarea> <br>
              <input class="form-control" type="text" name="availabletickets" id="availabletickets" placeholder="Numar locuri disponibile"> <br>
              <label>Alegeti data evenimentului:</label>
              <input class="form-control" type="date" name="date" id="date" style="width:170px;" ><br>
             <label>Alegeti o imagine:</label>
            <!--  <input  type="file" name="image" id="image" required="true">
			  <p style="color:#8B0000;"><small>*Incarcarea imaginii este obligatorie </small></p>-->
              <button class="btn btn-default" id="addValue" style="color:#8B0000;">OK</button>
            </div>
          </div>
         </div>
        </div>
     </form>
    </div>
  </body>
      
      