						 <th>Imagine</th>
						 <th>Detalii</th>
						 <th style="width: 100px" ></th>
						 </tr>
						 <% Object.keys(data).forEach(function (id) {
                    var event = data[id]; %>		
						 <tr>
						 <td><%=event.title%> </td>
						 <td><%=event.description%></td>
						 <td><%=event.date%></td>
						 <td><%=event.availabletickets %></td>
