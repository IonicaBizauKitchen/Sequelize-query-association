  <body>
	 <% include navbar.ejs %>
	 <div class="container">
					<div style="padding-top:75px;"  class="col-md-12">
						 <h2><%= number %> Evenimente Create</h2>	 
							<div align="right"><a class="btn " id="addValue"  style="background-color:#8B0000; color:white;" href="/events/add">Adauga Eveniment</a></div> <br/>
					</div>
					 <div class="row" >
